@using System.Web.Http
@using PropertyWebAPI.Areas.HelpPage.Models
@model HelpPageApiModel

@{
    var description = Model.ApiDescription;
    ViewBag.Title = description.HttpMethod.Method + " " + description.RelativePath;
}

<link type="text/css" href="~/Areas/HelpPage/HelpPage.css" rel="stylesheet" />
<div id="logo" class="help-page-header">
    <img src="~/Areas/HelpPage/Images/Redq-Logo.png" alt="RedQ" />
    <span>  RedQ</span>
</div>
<header class="help-page-header">
    <div class="content-wrapper">
        <div class="float-left">
            <h1>Property Record Data Services</h1>
            <h2>API Details</h2>
            <hr />
        </div>
    </div>
</header>
<div id="body" class="help-page">
    <section class="featured">
        <div class="content-wrapper">
            <p>
                @Html.ActionLink("Help Page Home", "Index")
            </p>
        </div>
    </section>
    <section class="content-wrapper main-content clear-fix">
        @Html.DisplayForModel()
    </section>
</div>
<div id="body" class="help-page">
    <section class="featured">
        <div class="content-wrapper">
            <p align="center">Copyright (c) Redq Technologies, Inc. All rights reserved.</p>
        </div>
    </section>
</div>
